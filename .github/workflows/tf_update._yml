 name: ourverse.tf
 on: 
   push:
     branch: [ development ]

 jobs:
   job_one:
     name: Deploy
     runs-on: ubuntu-latest
     steps:
     - name: pushing latest change on www2.ourverse.tf
       uses: appleboy/ssh-action@master
       with:
         host: www2.ourverse.tf
         username: root
         key: ${{ secrets.TF_SECRET }}
         port: 22
         script: |
           cd /opt/www_ourverse/
           git log -1
           git restore static/css/index.css
           git pull
           npm run build
